apiVersion: {{ .Config.APIVersion }}
kind: {{ .Config.Kind }}
metadata:
  name: {{ .Config.Metadata.Name }}
  tenant: {{ .Config.Metadata.Tenant }}
  primaryRegion: {{ .Config.Metadata.PrimaryRegion }}
  {{- if .Config.Metadata.SecondaryRegion }}
  secondaryRegion: {{ .Config.Metadata.SecondaryRegion }}
  {{- end }}
spec:
  platform:
    managementGroups:
      model: {{ .Config.Spec.Platform.ManagementGroups.Model }}
    connectivity:
      type: {{ .Config.Spec.Platform.Connectivity.Type }}
    identity:
      type: {{ .Config.Spec.Platform.Identity.Type }}
    management:
      logAnalytics:
        retentionDays: {{ .Config.Spec.Platform.Management.LogAnalytics.RetentionDays }}
      automationAccount: {{ .Config.Spec.Platform.Management.AutomationAccount }}
      defenderForCloud:
        enabled: {{ .Config.Spec.Platform.Management.Defender.Enabled }}
        plans:
        {{- range .Config.Spec.Platform.Management.Defender.Plans }}
          - {{ . }}
        {{- end }}
  governance:
    policies:
      assignments:
      {{- range .Config.Spec.Governance.Policies.Assignments }}
        - {{ . }}
      {{- end }}
  naming:
    convention: {{ .Config.Spec.Naming.Convention }}
  stateBackend:
    resourceGroup: {{ .Config.Spec.StateBackend.ResourceGroup }}
    storageAccount: {{ .Config.Spec.StateBackend.StorageAccount }}
    container: {{ .Config.Spec.StateBackend.Container }}
    subscription: {{ .Config.Spec.StateBackend.Subscription }}
    versioning: {{ .Config.Spec.StateBackend.Versioning }}
    softDelete: {{ .Config.Spec.StateBackend.SoftDelete }}
    softDeleteDays: {{ .Config.Spec.StateBackend.SoftDeleteDays }}
  cicd:
    platform: {{ .Config.Spec.CICD.Platform }}
    branchPolicy:
      mainBranch: {{ .Config.Spec.CICD.BranchPolicy.MainBranch }}
      requirePR: {{ .Config.Spec.CICD.BranchPolicy.RequirePR }}
